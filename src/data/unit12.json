    "sections": [
        {
            "id": "12.1",
            "type": "lesson",
            "title": "Kartu Natal",
            "titleEn": "Christmas cards",
            "content": {
                "intro": "Danny needs help writing a Christmas card. Learn bahwa (that) for complex sentences and names as pronouns.",
                "dialogue": [
                    {
                        "speaker": "DANNY",
                        "id": "Saya mau kirim kartu Natal kepadanya.",
                        "en": "I want to send a Christmas card to him."
                    },
                    {
                        "speaker": "ADI",
                        "id": "Sudah beli kartu ucapan?",
                        "en": "Have you bought a greetings card?"
                    },
                    {
                        "speaker": "DANNY",
                        "id": "Sudah. Tapi saya bingung, mau tulis apa.",
                        "en": "Yes. But I'm confused, I don't know what to write."
                    },
                    {
                        "speaker": "ADI",
                        "id": "Beritahu dia bahwa sebentar lagi Danny mau pulang ke Australia.",
                        "en": "Tell him that soon you're going home to Australia."
                    }
                ],
                "grammar": {
                    "title": "Bahwa — Complex Sentences",
                    "explanation": "**Bahwa** = 'that' (conjunction). Links two clauses: *Beritahu dia bahwa Danny mau pulang.* (Tell him that Danny is going home.) Cannot start a sentence.",
                    "examples": [
                        {
                            "id": "Saya tidak tahu bahwa dia bukan orang Indonesia.",
                            "en": "I didn't know that she wasn't Indonesian."
                        },
                        {
                            "id": "Beritahu dia bahwa saya sudah sampai.",
                            "en": "Tell him that I've arrived."
                        }
                    ]
                }
            },
            "vocabulary": [
                {
                    "word": "Natal",
                    "meaning": "Christmas"
                },
                {
                    "word": "kartu ucapan",
                    "meaning": "greetings card"
                },
                {
                    "word": "bahwa",
                    "meaning": "that (conjunction)"
                },
                {
                    "word": "beritahu",
                    "meaning": "to inform, tell"
                },
                {
                    "word": "bingung",
                    "meaning": "confused"
                },
                {
                    "word": "perbaiki",
                    "meaning": "to fix, improve"
                },
                {
                    "word": "sebentar lagi",
                    "meaning": "very soon"
                }
            ]
        },
        {
            "id": "12.2",
            "type": "lesson",
            "title": "Percakapan telepon",
            "titleEn": "A telephone conversation",
            "content": {
                "intro": "Danny calls Yosef in Papua to get his address. Practice telephone conversation phrases.",
                "dialogue": [
                    {
                        "speaker": "DANNY",
                        "id": "Halo, Yosef! Apa kabar?",
                        "en": "Hello, Yosef! How are you?"
                    },
                    {
                        "speaker": "YOSEF",
                        "id": "Saya baik-baik saja.",
                        "en": "I'm just fine."
                    },
                    {
                        "speaker": "DANNY",
                        "id": "Boleh saya minta alamatnya?",
                        "en": "May I have your address?"
                    },
                    {
                        "speaker": "YOSEF",
                        "id": "Ini alamatnya: Jalan Yos Sudarso No. 72, Manokwari, Papua Barat.",
                        "en": "Here's the address: Jalan Yos Sudarso No. 72, Manokwari, West Papua."
                    }
                ]
            },
