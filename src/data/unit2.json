                    {
                        "speaker": "RIRI",
                        "id": "Apa kabar?",
                        "en": "How are you?"
                    },
                    {
                        "speaker": "DANNY",
                        "id": "Baik-baik saja.",
                        "en": "Just fine."
                    },
                    {
                        "speaker": "RIRI",
                        "id": "Danny berasal dari mana?",
                        "en": "Where are you from, Danny?"
                    },
                    {
                        "speaker": "DANNY",
                        "id": "Saya berasal dari Australia.",
                        "en": "I come from Australia."
                    },
                    {
                        "speaker": "RIRI",
                        "id": "Riri berasal dari mana?",
                        "en": "Where are you from, Riri?"
                    },
