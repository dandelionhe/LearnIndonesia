    "sections": [
        {
            "id": "8.1",
            "type": "lesson",
            "title": "Uda Amir, penjual nasi Padang",
            "titleEn": "Amir, the Padang food seller",
            "content": {
                "intro": "Adi and Danny chat with a Padang restaurant owner about his life, customers, and an upcoming trip to Padang for Idul Adha.",
                "dialogue": [
                    {
                        "speaker": "ADI",
                        "id": "Uda Amir sudah berapa lama di Jakarta?",
                        "en": "How long have you been in Jakarta?"
                    },
                    {
                        "speaker": "UDA AMIR",
                        "id": "Sudah 30 tahun sejak saya pindah dari Padang.",
                        "en": "It's been 30 years since I moved from Padang."
                    },
                    {
                        "speaker": "DANNY",
                        "id": "Makanan apa yang khas di sini?",
                        "en": "What special foods do you have here?"
                    },
                    {
                        "speaker": "UDA AMIR",
                        "id": "Makanan Padang, seperti rendang, soto Padang, dan ayam pop.",
                        "en": "Padang food, like beef rendang, soup, and skinless chicken."
                    },
                    {
                        "speaker": "UDA AMIR",
                        "id": "Saat Idul Adha nanti, saya dan keluarga akan pergi ke Padang.",
                        "en": "When Idul Adha comes, my family and I will go to Padang."
                    }
                ],
                "grammar": {
                    "title": "Kalian and Sekalian",
                    "explanation": "**Kalian** = you (plural), used informally and formally. **Sekalian** = all (at once) or together. E.g., *Pelajar seperti kalian* = students like you.",
                    "examples": [
                        {
                            "id": "Tamunya bukan hanya pelajar seperti kalian.",
                            "en": "The customers aren't just students like you."
                        },
                        {
                            "id": "Bapak-bapak dan ibu-ibu sekalian, silakan masuk.",
                            "en": "Ladies and gentlemen, please come in."
                        }
                    ]
                }
            },
            "vocabulary": [
